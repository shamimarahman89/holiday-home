<!DOCTYPE html>
<html>
    <head>
    <meta charset="utf-8" />
        <title>WEB322 Assignment2</title>
    
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
    
        <link
          href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap"rel="stylesheet"/>
    
        <link rel="stylesheet" href="style.css" type="text/css" />
    </head>
    <body>
        <header>
            <div id="store_name">
                <h3>
                    Holiday & Home
                </h3>
            </div>

            <div id="search-wrapper">
                <form action="/search" method="POST">   
                  <label for="city">WHERE</label>
                  <select
                      id="city"
                      name="city"
                      type="text"
                      tabindex="1"
                      placeholder="Anywhere"
                  >
                  >
                      <option>Toronto</option>
                      <option>Vaughan</option>
                      <option>Brampton</option>
                      <option>Hamilton</option>
                      <option>London</option>
                      <option>Richmond Hill</option>
                      <option>Kitchener</option>
                      <option>Windsor</option>
                      <option>Mississauga</option>
                      <option>Barrie</option>
                      <option>Guelph</option>
                      <option>Oshawa</option>
                      <option>Waterloo</option>
                  </select>
                  <input id="search" type="submit" name="submit" value="SEARCH" tabindex="2">  
                </form>
            </div>
            <div id="user-options">
              {{#if data.session.login}}
                <div class="login">
                    <i class="material-icons" onclick= data.firstName >account_circle</i>
                </div> 
                 
                <div class="dropdown">
                    <div class="hamburger" onclick="myFunction()">
                       <div class="bar1"></div>
                       <div class="bar2"></div>
                       <div class="bar3"></div>
                     </div>
                     <div id="myDropdown" class="dropdown-content">
                       <a href="/">Home</a>
                       <a href="rooms">View Listing</a>
                       <a href="logout">Logout</a>
                     </div>
                     
                </div>
                
            </div>
              {{else}} 
                <div class="login">
                    <i class="material-icons" onclick="openForm()">account_circle</i>
                </div>  
              
                <div class="form-popup" id="myForm">
                    <form action="/login-submit" method="POST" class="form-container">
                      <h1>Login</h1>
                  
                      <label for="email"><b>Email</b></label>
                      <input type="email" placeholder="Enter Email" name="email" required>
                  
                      <label for="psw"><b>Password</b></label>
                      <input type="password" placeholder="Enter Password" name="password" required>
                  
                      <button type="submit" class="btn">Login</button>
                      <button type="button" class="btn cancel" onclick="closeForm()">Close</button>
                    </form>
                  </div> 
                <div class="dropdown">
                    <div class="hamburger" onclick="myFunction()">
                       <div class="bar1"></div>
                       <div class="bar2"></div>
                       <div class="bar3"></div>
                     </div>
                     <div id="myDropdown" class="dropdown-content">
                       <a href="signup">Sign Up</a>
                       <a href="/">Home</a>
                       <a href="rooms">Room Listing</a>
                     </div>
                     
                </div>
              {{/if}}
                
            </div>
            
        </header>

        <main>
            <div class="admin_listingForm" id="room_listingForm"    >
            <form action="/submit-listing" method="POST" enctype="multipart/form-data">
                <label for="room_title">Room title</label>
                <input
                    id="room_title"
                    name="room_title"
                    type="text"
                    tabindex="1"
                    
                >
                <label for="room_price">Price</label>
                <input
                    id="room_price"
                    name="room_price"
                    type="number"
                    tabindex="2"  
                >
                <label for="room_detail">Description</label>
                <input
                    id="room_detail"
                    name="room_detail"
                    type="text"
                    tabindex="3"  
                >
                <label for="room_location">Location</label>
                <input
                    id="room_location"
                    name="room_location"
                    type="text"
                    tabindex="4"  
                >
                <label for="room_photo">Upload a photo of the room</label>
                <input
                    id="room_image"
                    name="room_image"
                    type="file"
                    tabindex="5"
                    accept="image/png, image/jpeg"
                >
                <label for="room_start">Start Date</label>
                    <input
                    id="room_start"
                    name="room_start"
                    type="date"
                    tabindex="6"
                    >
                    <label for="room_end">End Date</label>
                    <input
                    id="room_end"
                    name="room_end"
                    type="date"
                    tabindex="7"
                    >
                
                    <label for="room_guest">GUESTS</label>
                    <select
                        id="room_guest"
                        name="room_guest"
                        type="number"
                        tabindex="8"
                    >
                    >
                        <option>1 guest</option>
                        <option>2 guests</option>
                        <option>3 guests</option>
                        <option>4 guests</option>
                        <option>5 guests</option>
                        <option>6 guests</option>
                        <option>7 guests</option>
                        <option>8 guests</option>
                        <option>9 guests</option>
                        <option>10 guests</option>
                    >
                <button type="submit" class= "submit" > Submit </button>
            </form>
        </div>
        </main>
         <script type="text/javascript" src="index.js"></script>
    </body>
</html>
