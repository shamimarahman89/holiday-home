<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
            <title>Holiday-Home</title>
        
            <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
        
            <link
              href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap"rel="stylesheet"/>
        
            <link rel="stylesheet" href="style.css" type="text/css" />

        </head>
        <body>
            <header>
                <div id="store_name">
                    <h3>
                        Holiday & Home
                    </h3>
                </div>
    
                <div id="search-wrapper">
                <form action="/search" method="POST">  
                  <label for="city">WHERE</label>
                  <select
                      id="city"
                      name="city"
                      type="text"
                      tabindex="1"
                      placeholder="Anywhere"
                  >
                  >
                      <option>Toronto</option>
                      <option>Vaughan</option>
                      <option>Brampton</option>
                      <option>Hamilton</option>
                      <option>London</option>
                      <option>Richmond Hill</option>
                      <option>Kitchener</option>
                      <option>Windsor</option>
                      <option>Mississauga</option>
                      <option>Barrie</option>
                      <option>Guelph</option>
                      <option>Oshawa</option>
                      <option>Waterloo</option>
                  </select>
                  <input id="search" type="submit" name="submit" value="SEARCH" tabindex="2">  
                </form>
            </div>
                <div id="user-options">
              {{#if data.session.login}}
                <div class="loginName">
                    <h3>{{data.session.firstName}}</h3>
                </div>
                 
                <div class="dropdown">
                  <div class="hamburger" onclick="myFunction()">
                    <div class="bar1"></div>
                    <div class="bar2"></div>
                    <div class="bar3"></div>
                  </div>
                  <div id="myDropdown" class="dropdown-content">
                    <a href="/">Home</a>
                    <a href="rooms">View Listing</a>
                    {{#if_eq data.session.userType "admin" }}
                    <a href="/create-listing">Create Listing</a>
                    {{/if_eq}}
                    <a href="logout">Logout</a>
                  </div>
                     
                </div>
                
            </div>
              {{else}} 
                <div class="login">
                    <i class="material-icons" onclick="openForm()">account_circle</i>
                </div>  
              
                <div class="form-popup" id="myForm">
                    <form action="/login-submit" method="POST" class="form-container">
                      <h1>Login</h1>
                  
                      <label for="email"><b>Email</b></label>
                      <input type="email" placeholder="Enter Email" name="email" required>
                  
                      <label for="psw"><b>Password</b></label>
                      <input type="password" placeholder="Enter Password" name="password" required>
                  
                      <button type="submit" class="btn">Login</button>
                      <button type="button" class="btn cancel" onclick="closeForm()">Close</button>
                    </form>
                  </div> 
                <div class="dropdown">
                    <div class="hamburger" onclick="myFunction()">
                       <div class="bar1"></div>
                       <div class="bar2"></div>
                       <div class="bar3"></div>
                     </div>
                     <div id="myDropdown" class="dropdown-content">
                       <a href="signup">Sign Up</a>
                       <a href="/">Home</a>
                       <a href="rooms">Room Listing</a>
                     </div>
                     
                </div>
              {{/if}}
                
            </div>
                
            </header>
            <main>
              <div id="successMessage">
                <h2>Booking successful! Your booking details have been sent by e-mail.</h2>
              </div>

            </main>
            <script type="text/javascript" src="index.js"></script>
        </body>
</html>